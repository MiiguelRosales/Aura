<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalla_registro">

    <ImageView
        android:id="@+id/ivFondoGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/registro" />

    <TextView
        android:id="@+id/tvTituloRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/caveat_brush"
        android:shadowColor="#80000000"
        android:shadowDx="22"
        android:shadowDy="22"
        android:shadowRadius="4"
        android:text="REGISTRO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_above="@id/imageButtonRegistroDerecha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/caveat_brush"
        android:text="REGISTRAR"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:backgroundTint="#004D95"
        app:cornerRadius="20dp"
        app:strokeColor="#80FFFFFF"
        app:strokeWidth="1dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewRegistro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/btnRegistrar"
        android:layout_below="@id/tvTituloRegistro"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#B3232222"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:strokeColor="#003F5B"
        app:strokeWidth="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <EditText
                    android:id="@+id/etNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/caveat_brush"
                    android:hint="Nombre de usuario"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/caveat_brush"
                    android:hint="Fecha de nacimiento"
                    android:inputType="date"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/caveat_brush"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/caveat_brush"
                    android:hint="Celular"
                    android:inputType="phone"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/caveat_brush"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/etConfirmarContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/caveat_brush"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:textSize="24sp" />

            </LinearLayout>
        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/imageButtonRegistroIzquierda"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/flechaizquierda" />

    <ImageButton
        android:id="@+id/imageButtonRegistroDerecha"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/flechaderecha" />

</RelativeLayout>