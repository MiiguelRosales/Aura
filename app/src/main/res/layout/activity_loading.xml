<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:gravity="center">

    <!-- Sombra izquierda del libro -->
    <View
        android:id="@+id/shadowLeft"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:alpha="0.35"
        android:background="#275EFE"
        android:rotation="-6" />

    <!-- Sombra derecha del libro -->
    <View
        android:id="@+id/shadowRight"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:alpha="0.35"
        android:background="#275EFE"
        android:rotation="6" />

    <!-- Contenedor principal del libro -->
    <FrameLayout
        android:id="@+id/bookFrame"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true">

        <!-- Fondo del libro con gradiente azul -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loader_book_bg"
            android:elevation="4dp"
            android:orientation="vertical" />

        <!-- Página base visible (primera, siempre visible) -->
        <LinearLayout
            android:id="@+id/page1"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/loader_page_shape"
            android:elevation="5dp"
            android:orientation="vertical" />

        <!-- Página 2 - animada -->
        <LinearLayout
            android:id="@+id/page2"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/loader_page_fold"
            android:elevation="6dp"
            android:orientation="vertical"
            android:rotationY="180" />

        <!-- Página 3 - animada -->
        <LinearLayout
            android:id="@+id/page3"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/loader_page_fold"
            android:elevation="7dp"
            android:orientation="vertical"
            android:rotationY="180" />

        <!-- Página 4 - animada -->
        <LinearLayout
            android:id="@+id/page4"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/loader_page_fold"
            android:elevation="8dp"
            android:orientation="vertical"
            android:rotationY="180" />

        <!-- Página 5 - animada -->
        <LinearLayout
            android:id="@+id/page5"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:alpha="0"
            android:background="@drawable/loader_page_fold"
            android:elevation="9dp"
            android:orientation="vertical"
            android:rotationY="180" />

        <!-- Página final visible (última, siempre visible) -->
        <LinearLayout
            android:id="@+id/page6"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:alpha="1"
            android:background="@drawable/loader_page_shape"
            android:elevation="5dp"
            android:orientation="vertical"
            android:rotationY="0" />

    </FrameLayout>

    <!-- Texto "Cargando..." debajo del libro -->
    <TextView
        android:id="@+id/tvCargando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/caveat_brush"
        android:text="Cargando..."
        android:textColor="#6C7486"
        android:textSize="22sp" />

</RelativeLayout>
