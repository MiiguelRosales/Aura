<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fondo_glass"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvTituloMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="BIENVENIDO A\nNUMEROS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:shadowColor="#80000000"
        android:shadowDx="22"
        android:shadowDy="22"
        android:shadowRadius="4"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:strokeWidth="10dp"
        app:strokeColor="#003F5B"
        app:cardBackgroundColor="#B3545454"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMain"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIrPrimos"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:text="NUMEROS PRIMOS"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            app:backgroundTint="#004D95"
            app:strokeColor="#80FFFFFF"
            app:strokeWidth="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIrPerfectos"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:text="NUMEROS PERFECTOS"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            app:backgroundTint="#004D95"
            app:strokeColor="#80FFFFFF"
            app:strokeWidth="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIrAmigos"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="NUMEROS AMIGOS"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:cornerRadius="20dp"
            app:backgroundTint="#004D95"
            app:strokeColor="#80FFFFFF"
            app:strokeWidth="1dp"/>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>