<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalla_inicio">

    <ImageView
        android:id="@+id/ivFondoGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/inicio" />

    <TextView
        android:id="@+id/tvTituloMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/caveat_brush"
        android:shadowColor="#80000000"
        android:shadowDx="22"
        android:shadowDy="22"
        android:shadowRadius="4"
        android:text="AURA"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="90sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTituloMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        app:cardBackgroundColor="#B3232222"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:strokeColor="#003F5B"
        app:strokeWidth="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="324dp"
            android:orientation="vertical"
            android:padding="50dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrPrimos"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:text="INICIO"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/caveat_brush"
                android:textSize="28sp"
                app:backgroundTint="#004D95"
                app:cornerRadius="20dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrPerfectos"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:text="REGISTRATE"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:fontFamily="@font/caveat_brush"
                app:backgroundTint="#004D95"
                app:cornerRadius="20dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrAmigos"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="VINCULA"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:fontFamily="@font/caveat_brush"
                app:backgroundTint="#004D95"
                app:cornerRadius="20dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>