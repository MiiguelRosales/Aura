<?xml version="1.0" encoding="utf-8"?>
<!-- Fondo del botón REGISTRAR: dark #07182E con borde degradado cyan→magenta -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde gradiente cyan → magenta -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00B7FF"
                android:endColor="#FF30FF"
                android:angle="270"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Interior oscuro con inset de 2dp para mostrar el borde -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#07182E" />
            <corners android:radius="18dp" />
        </shape>
    </item>
</layer-list>
